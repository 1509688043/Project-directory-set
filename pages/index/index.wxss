.fx{width: 100%;height: 100vh;overflow: hidden;}
.top_search{width: 90%;display: flex;align-items: center;height: 64rpx;border: 1rpx solid #fff;margin: 0 auto;position: absolute;top: 20rpx;margin-left: 5%;z-index: 999;border-radius: 10rpx;}
.top_search image{width: 46rpx;height: 46rpx;margin-right: 15rpx;margin-left: 15rpx;}
.top_search input{font-size: 26rpx;color: #fff;}
.top_search input .place-holder{color: #fff;}

.m_banner{width: 100%;position: relative;}
.m_banner swiper{width: 100%;height: 425rpx;}
.m_banner swiper image{width: 100%;}

.now_tj{width: 100%;display: flex;align-items: center;height: 90rpx;font-size: 32rpx;color: #333333;}
.now_tj text{margin-left: 20rpx;}

.V_menu{width: 100%;position: relative;margin-bottom: 30rpx;}
/* .V_menu video{width: 100%;height: 402rpx;} */
.V_menu .coverVIdeo{width: 100%;height: 402rpx;}
.V_menu .fi_div{width: 100%;height: 402rpx;background: #000;overflow: hidden;position: absolute;top: 0;left: 0;z-index: 999;}
.V_menu .fi_div view{text-align: center;font-size: 32rpx;color: #fff;margin: 150rpx auto 40rpx auto;}
.V_menu .fi_div button{width: 250rpx;height:75rpx;text-align: center;line-height: 75rpx;color: #fff;background: red;border-radius: 20rpx;outline: none;border: none;display: block;margin: 0 auto;font-size: 28rpx;}
.bofang{width: 200rpx;position: absolute;top: 20vh;left: 50%;margin: -60rpx 0 0 -100rpx;height: 120rpx;}
.bofang image{width: 55rpx;height: 55rpx;display:block;margin: 0 auto;margin-bottom: 10rpx;}
.bofang view{color: #fff;font-size: 28rpx;text-align: center;}

.namegroup{width: 100%;display: flex;align-items: center;justify-content: space-between;margin: 15rpx auto;}
.namegroup .Vname{color: #333;font-size: 30rpx;margin-left: 20rpx;}
.namegroup .name_right{display: flex;align-items: center;justify-content: flex-start;}
.namegroup .name_right view{display: flex;align-items: center;}
.namegroup .name_right image{width: 28rpx;height: 28rpx;margin-right: 10rpx;}
.namegroup .name_right text{color: #666666;font-size: 26rpx;margin-right: 30rpx;}
.V-group{width: 100%;display: flex;align-items: center;margin: 15rpx auto; }
.V-group text{margin-left: 20rpx;color: #666666;font-size: 26rpx;}
.msg{width: 95%;margin: 0 auto;color: #999999;font-size: 26rpx;margin-bottom: 15rpx;
display: -webkit-box;
word-break: break-all;
-webkit-box-orient: vertical;
overflow: hidden;
text-overflow:ellipsis;}

.zhankai{width: 100%;display: flex;align-items: center;justify-content: flex-end;}
.zhankai view{display: flex;align-items: center;}
.zhankai image{width: 28rpx;height: 28rpx;margin-right: 10rpx;}
.zhankai text{color: #666666;font-size: 26rpx;margin-right: 30rpx;}

.filiter{width: 100%;height: 100%;align-items: center;justify-content: center;background: rgba(0,0,0,0.4);position: fixed;top: 0;z-index: 999;overflow: hidden;}
.filiter .box{width: 590rpx;height: 695rpx;background: #fff;border-radius: 25rpx;position: relative;}
.filiter .box .mimg{width: 100%;height: 336rpx;border-radius: 25rpx 25rpx 0 0;}
.share{width: 100%;}
.share .m_name{width: 90%;margin: 0 auto;color: #333;font-size: 32rpx;margin-bottom:50rpx;}
.share .shar_group{width: 100%;display: flex;justify-content: center;}
.share .shar_group view{width: 120rpx;margin: 0 50rpx;}
.share .shar_group view image{width: 120rpx;height: 120rpx;margin-bottom: 20rpx;}
.share .shar_group view text{display: block;text-align: center;color: #666666;font-size: 26rpx;}
.share .shar_group view button{background: none;border: none;line-height:1.38 !important;padding-right:0 !important;padding-left: 0 !important;}
button[plain]{ border:0 }
.deleicon{position: absolute;bottom: -100rpx;width: 100%;display: flex;align-items: center;justify-content: center;}
.deleicon image{width: 60rpx;height: 60rpx;}
